<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Add a Toolbar as ActionBar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Options Menu Example"
        android:titleTextColor="#FFFFFF"/>

    <!-- Button for Popup Menu -->
    <Button
        android:id="@+id/button_show_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Popup Menu"/>

    <!-- TextView for Context Menu -->
    <TextView
        android:id="@+id/textView_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long Press Here (Context Menu)"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:background="#E0E0E0"/>
</LinearLayout>
